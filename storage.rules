rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the uploads directory
    match /uploads/{userId}/{allPaths=**} {
      // Allow a user to read and write files only in their own folder.
      // This prevents users from accessing or overwriting each other's uploads.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
