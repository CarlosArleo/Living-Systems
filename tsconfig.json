{
  "compilerOptions": {
    // --- Target & Module System ---
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler", // Use 'bundler' for modern tools like Vite/Next.js

    // --- Path Aliases (THE CRITICAL FIX) ---
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    // --- Strictness & Quality ---
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true, // We only use tsc for type checking, not compiling
    "esModuleInterop": true,
    "skipLibCheck": true, // Skips type checking of declaration files in node_modules

    // --- Next.js Specific Requirements ---
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "scripts"] // Exclude scripts from Next.js's main compilation
}